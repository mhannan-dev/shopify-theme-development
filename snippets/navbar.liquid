<nav class="bg-white border-b border-gray-200">
  <div class="container flex flex-wrap items-center justify-between mx-auto p-4">
    <!-- Logo -->
    <a href="{{ routes.root_url }}" class="flex items-center space-x-2 rtl:space-x-reverse">
      <img src="{{ 'logo.png' | asset_url }}" class="h-8" alt="{{ shop.name }} Logo" width="150" height="200">
    </a>

    <!-- Mobile menu button -->
    <button
      data-collapse-toggle="navbar-menu"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-gray-700 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
      aria-controls="navbar-menu"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- Navigation & Icons wrapper -->
    <div class="hidden w-full md:flex md:items-center md:w-auto" id="navbar-menu">
      <!-- Nav links left -->
      <ul class="font-medium flex flex-col p-4 mt-4 rounded-lg bg-gray-50 md:flex-row md:space-x-8 md:mt-0 md:bg-transparent">
        {% for link in linklists['main-menu'].links %}
          <li>
            <a
              href="{{ link.url }}"
              class="block py-2 px-3 text-gray-700 hover:bg-gray-100 md:hover:bg-transparent md:hover:text-gray-900 rounded-md transition-colors duration-200"
            >
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>

      <!-- Spacer to push icons right -->
      <div class="flex-grow"></div>

      <!-- Icons right -->
      <div class="flex items-center space-x-4 mt-4 md:mt-0">
        <a href="/search" class="text-gray-700 hover:text-gray-900">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M10.5 17a6.5 6.5 0 1 1 0-13 6.5 6.5 0 0 1 0 13z" />
          </svg>
        </a>

        <a href="/account" class="text-gray-700 hover:text-gray-900">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A8 8 0 1 1 18.88 17.804M12 12a4 4 0 1 0 0-8 4 4 0 0 0 0 8z" />
          </svg>
        </a>

        <a href="/cart" class="text-gray-700 hover:text-gray-900">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-1.5 7h13l-1.5-7M10 21a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm7 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</nav>
