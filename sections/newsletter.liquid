<!-- Newsletter Section -->
<section class="bg-gray-900 text-white py-16 md:py-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Heading -->
    <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold mb-4">
      {{ section.settings.heading }}
    </h2>

    <!-- Subheading -->
    <p class="text-lg sm:text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
      {{ section.settings.subheading }}
    </p>

    <!-- Form -->
    <form class="max-w-md mx-auto flex flex-col sm:flex-row gap-2" method="post" action="/contact#contact_form">
      <input type="hidden" name="form_type" value="customer">
      <input type="hidden" name="utf8" value="âœ“">

      <input
        type="email"
        name="contact[email]"
        placeholder="{{ section.settings.placeholder }}"
        required
        class="w-full px-4 py-3 sm:py-4 rounded sm:rounded-r-none border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 placeholder-gray-400 transition-colors duration-200"
      >

      <!-- Submit Button -->
      <button
        type="submit"
        class="px-6 py-3 sm:py-4 bg-blue-600 hover:bg-blue-700 active:bg-blue-800 rounded sm:rounded-l-none font-medium transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 whitespace-nowrap"
      >
        {{ section.settings.button_text }}
      </button>
    </form>

    <!-- Privacy Note -->
    <p class="mt-4 text-sm text-gray-400">
      {{ section.settings.privacy_note }}
    </p>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join Our Watch Community"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Subscribe for exclusive offers, new releases, and watch care tips"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Input Placeholder",
      "default": "Your email address"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "privacy_note",
      "label": "Privacy Note",
      "default": "We respect your privacy. Unsubscribe at any time."
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "category": "Custom"
    }
  ]
}
{% endschema %}
