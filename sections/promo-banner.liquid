<section class="container mx-auto px-6 py-16">
  <div class="rounded-xl p-8 md:p-16 text-white relative overflow-hidden">
    <!-- Gradient background -->
    <div class="absolute inset-0 rounded-xl z-0" style="background: {{ section.settings.gradient_background }}"></div>

    <!-- Content container -->
    <div class="relative z-10 max-w-2xl">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 leading-tight">
        {{ section.settings.heading }}
      </h2>
      <p class="text-xl md:text-2xl mb-8 opacity-95">
        {{ section.settings.subheading }}
      </p>
      <a
        href="{{ section.settings.button_link }}"
        class="bg-white text-indigo-700 px-8 py-4 rounded-full font-bold hover:bg-gray-50 transition-all duration-300 hover:shadow-xl inline-flex items-center gap-2"
      >
        {{ section.settings.button_text }}
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Limited Edition Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Limited Edition Timepieces"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Exclusive designs available for a limited time only"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Limited Editions"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "gradient_background",
      "label": "Gradient Background",
      "default": "linear-gradient(to right, #4338ca, #1e3a8a)"
    }
  ],
  "presets": [
    {
      "name": "Limited Edition Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
