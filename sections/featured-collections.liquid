<!-- Featured Categories Section -->
<section class="container mx-auto px-6 py-16">
  {%- if section.blocks -%}
    <h2 class="text-3xl font-semibold mb-12 text-center">{{ section.settings.heading }}</h2>
    
  {%- endif -%}
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
    {% for block in section.blocks %}
      {% assign collection = block.settings.collection %}
      <a
        href="{{ collection.url }}"
        class="group relative overflow-hidden rounded-lg shadow-md h-64 hover:shadow-xl transition-shadow"
      >
        {% if collection.image %}
          <img
            src="{{ collection.image | image_url: width: 600 }}"
            alt="{{ collection.title }}"
            class="w-full h-full object-cover group-hover:scale-105 transition duration-500"
            width="600"
            height="256"
          >
        {% endif %}
        <div class="absolute inset-0 bg-black bg-opacity-30 flex items-center justify-center group-hover:bg-opacity-40 transition">
          <h3 class="text-white text-2xl font-bold">{{ collection.title }}</h3>
        </div>
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection Block",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Featured Categories",
      "category": "Custom",
      "blocks": [{ "type": "collection" }, { "type": "collection" }, { "type": "collection" }, { "type": "collection" }]
    }
  ]
}
{% endschema %}
