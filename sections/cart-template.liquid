{% comment %} sections/cart-template.liquid {% endcomment %}
<section class="container mx-auto px-6 py-16" id="cart-page">
  <h1 class="text-3xl font-bold mb-8">Your Shopping Cart</h1>

  <div class="flex flex-col lg:flex-row gap-8">
    <div class="lg:w-2/3">
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <!-- Cart Items -->
        <div class="divide-y">
          <!-- Item 1 -->
          <div class="p-6 flex flex-col sm:flex-row gap-6">
            <div class="w-full sm:w-32 flex-shrink-0">
              <img
                src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=200&amp;q=80"
                alt="Chronograph Master"
                class="w-full h-auto object-contain"
              >
            </div>
            <div class="flex-grow">
              <div class="flex justify-between">
                <div>
                  <h3 class="font-bold text-lg">Chronograph Master</h3>
                  <p class="text-gray-600">Navy Blue Dial, Leather Strap</p>
                </div>
                <span class="font-bold text-lg">৳12,500</span>
              </div>

              <div class="mt-4 flex items-center justify-between">
                <div class="flex items-center border rounded-lg">
                  <button class="px-3 py-1 text-gray-600 hover:bg-gray-100">-</button>
                  <span class="px-4 py-1 border-x">1</span>
                  <button class="px-3 py-1 text-gray-600 hover:bg-gray-100">+</button>
                </div>
                <button class="text-red-500 hover:text-red-700"><i class="far fa-trash-alt"></i> Remove</button>
              </div>
            </div>
          </div>

          <!-- Item 2 -->
          <div class="p-6 flex flex-col sm:flex-row gap-6">
            <div class="w-full sm:w-32 flex-shrink-0">
              <img
                src="https://images.unsplash.com/photo-1542496658-e33a6d0d50f6?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=200&amp;q=80"
                alt="Classic Elegance"
                class="w-full h-auto object-contain"
              >
            </div>
            <div class="flex-grow">
              <div class="flex justify-between">
                <div>
                  <h3 class="font-bold text-lg">Classic Elegance</h3>
                  <p class="text-gray-600">Silver Dial, Stainless Steel</p>
                </div>
                <span class="font-bold text-lg">৳9,800</span>
              </div>

              <div class="mt-4 flex items-center justify-between">
                <div class="flex items-center border rounded-lg">
                  <button class="px-3 py-1 text-gray-600 hover:bg-gray-100">-</button>
                  <span class="px-4 py-1 border-x">1</span>
                  <button class="px-3 py-1 text-gray-600 hover:bg-gray-100">+</button>
                </div>
                <button class="text-red-500 hover:text-red-700"><i class="far fa-trash-alt"></i> Remove</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Cart Summary -->
        <div class="p-6 border-t bg-gray-50">
          <div class="flex justify-between mb-2">
            <span>Subtotal</span>
            <span>৳22,300</span>
          </div>
          <div class="flex justify-between mb-2">
            <span>Shipping</span>
            <span>Free</span>
          </div>
          <div class="flex justify-between font-bold text-lg mt-4 pt-4 border-t">
            <span>Total</span>
            <span>৳22,300</span>
          </div>
        </div>
      </div>

      <div class="mt-6 flex flex-col sm:flex-row gap-4">
        <a
          href="#"
          class="px-6 py-3 border border-primary text-primary rounded-lg font-bold text-center hover:bg-blue-50 transition"
        >
          Continue Shopping
        </a>
        <a
          href="checkout.html"
          class="px-6 py-3 bg-primary text-white rounded-lg font-bold text-center hover:bg-blue-800 transition"
        >
          Proceed to Checkout
        </a>
      </div>
    </div>

    <div class="lg:w-1/3">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="font-bold text-lg mb-4">Order Summary</h3>
        <div class="space-y-4">
          <div class="flex justify-between">
            <span>2 items</span>
            <span>৳22,300</span>
          </div>
          <div class="flex justify-between">
            <span>Delivery</span>
            <span>Free</span>
          </div>
          <div class="pt-4 border-t font-bold text-lg flex justify-between">
            <span>Total</span>
            <span>৳22,300</span>
          </div>
        </div>

        <div class="mt-6">
          <h4 class="font-semibold mb-2">Promo Code</h4>
          <div class="flex">
            <input
              type="text"
              placeholder="Enter code"
              class="flex-grow px-4 py-2 border rounded-l focus:outline-none focus:ring-2 focus:ring-primary"
            >
            <button class="bg-gray-200 px-4 py-2 rounded-r hover:bg-gray-300">Apply</button>
          </div>
        </div>

        <div class="mt-6 pt-6 border-t">
          <h4 class="font-semibold mb-2">Secure Payment</h4>
          <div class="flex items-center space-x-4">
            <!-- Stripe Logo -->
            <img
              src="https://vikwp.com/images/plugins/stripe.png"
              alt="Stripe"
              class="h-8 w-auto object-contain"
              loading="lazy"
              width="200"
              height="80"
            >

            <!-- PayPal Logo -->
            <img
              src="https://i.pcmag.com/imagery/reviews/068BjcjwBw0snwHIq0KNo5m-15..v1602794215.png"
              alt="PayPal"
              class="h-8 w-auto object-contain"
              loading="lazy"
              width="200"
              height="80"
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  // Money formatting function
  function formatMoney(cents) {
    return new Intl.NumberFormat('en-US', {
      style: 'currency',
      currency: '{{ cart.currency.iso_code }}',
    }).format(cents / 100);
  }
</script>
