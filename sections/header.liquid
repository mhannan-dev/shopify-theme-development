{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TimeCrafters"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    }
  ]
}
{% endschema %}

<header class="bg-white shadow-lg sticky top-0 z-50">
      <div class="container mx-auto px-6 py-4">
        <!-- Top Header -->
        <div class="flex justify-between items-center mb-4">
          <div class="flex items-center space-x-4">
            <button class="md:hidden text-gray-700" id="mobile-menu-button">
              <i class="fas fa-bars text-xl"></i>
            </button>
            <a href="{{  routes.base_url }}" class="text-2xl font-bold text-primary">
              <span class="text-primary">Time</span><span class="text-gray-800">Crafters</span>
            </a>
          </div>

          <div class="flex items-center space-x-6">
            <div class="relative hidden md:block">
              <input type="text" placeholder="Search watches..." class="pl-10 pr-4 py-2 border rounded-full w-64 focus:outline-none focus:ring-2 focus:ring-primary">
              <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
            </div>
            <a href="account.html" class="text-gray-700 hover:text-primary transition-colors"><i class="far fa-user text-xl"></i></a>
            <a href="wishlist.html" class="text-gray-700 hover:text-primary transition-colors"><i class="far fa-heart text-xl"></i></a>
            <a href="{{  routes.cart_url }}" class="text-gray-700 hover:text-primary transition-colors relative">
              <i class="fas fa-shopping-cart text-xl"></i>
              <span class="absolute -top-2 -right-2 bg-accent text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">3</span>
            </a>
          </div>
        </div>

        <!-- Main Navigation -->
        <nav class="hidden md:flex justify-center space-x-8 text-gray-700 border-t pt-4" id="main-nav">
          <a href="{{  routes.base_url }}" class="hover:text-primary font-medium transition-colors">Home</a>
          <a href="new-arrivals.html" class="hover:text-primary font-medium transition-colors">New Arrivals</a>
          <a href="mens-watches.html" class="hover:text-primary font-medium transition-colors">Men's Watches</a>
          <a href="womens-watches.html" class="hover:text-primary font-medium transition-colors">Women's Watches</a>
          <a href="accessories.html" class="hover:text-primary font-medium transition-colors">Watch Accessories</a>
          <a href="sale.html" class="hover:text-primary font-medium transition-colors">Sale</a>
          <a href="blog.html" class="hover:text-primary font-medium transition-colors">Blog</a>
        </nav>
      </div>

      <!-- Mobile Menu -->
      <div class="md:hidden hidden bg-white py-2 px-4 border-t" id="mobile-menu">
        <div class="flex flex-col space-y-3">
          <a href="index.html" class="hover:text-primary">Home</a>
          <a href="new-arrivals.html" class="hover:text-primary">New Arrivals</a>
          <a href="mens-watches.html" class="hover:text-primary">Men's Watches</a>
          <a href="womens-watches.html" class="hover:text-primary">Women's Watches</a>
          <a href="accessories.html" class="hover:text-primary">Watch Accessories</a>
          <a href="sale.html" class="hover:text-primary">Sale</a>
          <a href="blog.html" class="hover:text-primary">Blog</a>
        </div>
      </div>
    </header>