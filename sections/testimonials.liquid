<section class="bg-gray-50 py-16">
  <div class="container mx-auto px-6">
    {% if section.blocks.size > 0 %}
      <h2 class="text-3xl font-semibold mb-12 text-center">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-center mb-4">
            <div class="text-yellow-400 mr-2">
              {% assign stars = block.settings.stars | plus: 0 %}
              {% for i in (1..stars) %}
                <i class="fas fa-star"></i>
              {% endfor %}
              {% if block.settings.half_star %}
                <i class="fas fa-star-half-alt"></i>
              {% endif %}
            </div>
          </div>
          <p class="text-gray-600 mb-4 italic">"{{ block.settings.testimonial }}"</p>
          <div class="flex items-center">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | image_url: width: 80 }}"
                alt="{{ block.settings.name }}"
                class="w-10 h-10 rounded-full mr-3"
                width="40"
                height="40"
              >
            {% endif %}
            <div>
              <h4 class="font-semibold">{{ block.settings.name }}</h4>
              <p class="text-sm text-gray-500">{{ block.settings.designation }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "What Watch Enthusiasts Say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer Name",
          "default": "Customer Name"
        },
        {
          "type": "text",
          "id": "designation",
          "label": "Customer Title",
          "default": "Frequent Buyer"
        },
        {
          "type": "textarea",
          "id": "testimonial",
          "label": "Testimonial Text",
          "default": "This is a sample testimonial."
        },
        {
          "type": "range",
          "id": "stars",
          "label": "Star Rating",
          "min": 0,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "checkbox",
          "id": "half_star",
          "label": "Include Half Star",
          "default": false
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Testimonials",
