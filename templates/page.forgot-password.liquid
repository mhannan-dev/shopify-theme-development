{% layout 'theme' %}

<section class="max-w-md mx-auto my-10 p-6 bg-white shadow-md rounded">
  <h1 class="text-xl font-bold mb-4">Reset your password</h1>

  {% form 'recover_customer_password' %}
    {% if form.errors %}
      <div class="text-red-600 mb-4">{{ form.errors | default_errors }}</div>
    {% endif %}

    {% if form.posted_successfully? %}
      <p class="text-green-600">Check your email for password reset instructions.</p>
    {% else %}
      <div class="mb-4">
        <label for="email" class="block mb-1">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="w-full border px-3 py-2 rounded"
          required
        >
      </div>

      <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
        Send reset link
      </button>
    {% endif %}
  {% endform %}
</section>
