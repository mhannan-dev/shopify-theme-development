{% layout 'theme' %}

<section class="relative bg-gray-900 text-white overflow-hidden">
  <div class="absolute inset-0 z-0">
    <img
      src="https://images.unsplash.com/photo-1542496658-e33a6d0d50f6?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=1920&amp;q=80"
      alt="Premium Men's Watches Collection"
      class="w-full h-full object-cover object-center"
      loading="eager"
      width="1920"
      height="1280"
    >
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/80 to-gray-900/40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
    <div class="text-center">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6 tracking-tight">
        <span class="block">Men's Luxury Watches</span>
        <span class="inline-block relative">
          <span class="relative z-10">Collection</span>
          <span class="absolute bottom-0 left-0 w-full h-2 bg-primary/70 -rotate-1 transform origin-left"></span>
        </span>
      </h1>

      <!-- Subheading -->
      <p class="max-w-2xl mx-auto text-xl md:text-2xl text-gray-300 mb-10">
        Precision crafted timepieces that define elegance and performance
      </p>

      <!-- Countdown timer with improved styling -->
      <div class="flex justify-center space-x-3 sm:space-x-4">
        <div class="bg-white/10 backdrop-blur-sm rounded-xl px-5 py-3 sm:px-6 sm:py-4 border border-white/10 hover:border-primary/50 transition-all duration-300">
          <span class="font-bold block text-3xl sm:text-4xl tracking-tight" id="countdown-days">03</span>
          <span class="text-sm sm:text-base text-gray-300">Days</span>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-xl px-5 py-3 sm:px-6 sm:py-4 border border-white/10 hover:border-primary/50 transition-all duration-300">
          <span class="font-bold block text-3xl sm:text-4xl tracking-tight" id="countdown-hours">00</span>
          <span class="text-sm sm:text-base text-gray-300">Hours</span>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-xl px-5 py-3 sm:px-6 sm:py-4 border border-white/10 hover:border-primary/50 transition-all duration-300">
          <span class="font-bold block text-3xl sm:text-4xl tracking-tight" id="countdown-minutes">00</span>
          <span class="text-sm sm:text-base text-gray-300">Minutes</span>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="mt-12">
        <a
          href="#sale-items"
          class="inline-flex items-center px-8 py-3 sm:px-10 sm:py-4 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-blue-700 transition-colors duration-300 shadow-lg shadow-primary/30 hover:shadow-primary/40"
        >
          Shop the Sale
          <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
